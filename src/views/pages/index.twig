{% set page_title = 'SkillSpar - Menu' %}
{% extends "../elements/_base.twig" %}

{% block content %}
<div class="container">
    <div class="menu-page" style="padding-top:150px">
        <h3>
            <u>Pages</u>
        </h3>
        <ul class="menu">
            {% set menu = [
            {link: "Login" },
            {link: "Register" },
            {link: "Home" },
            {link: "SecurityAwareness" },
            {link: "SecurityAssessment" },
            {link: "XACT" },
            {link: "ContactUs" },
            ] %}
            {% for link in menu %}
            <li>
                <a target="_blank" href="{{ link.link }}.html">{{ link.link }}</a>
            </li>
            {% endfor %}
        </ul>

        <h3>
            <u>Components</u>
        </h3>
        <div class="card">

            <div class="card-body">
                <h3>Link</h3>
                <a href="#" class="btn btn-1BAABC">Login/Register</a>
                <a href="#" class="btn btn-1BAABC_Light">Watch video</a>
            </div>
            <hr>
            <div class="card-body">
                <h3>Button</h3>
                <button class="btn btn-1BAABC">Login/Register</button>
                <a href="#" class="btn btn-1BAABC_Light">Watch video</a>
            </div>
        </div>
        <div class="mt-4">
            {% include "../elements/_banner.twig" %}
        </div>
    </div>

</div>
<style>
    .menu {
        padding: 20px 30px;
        margin: 0;
        list-style: none;
        position: relative;
        display: flex;
        flex-wrap: wrap;
    }

    .menu li {
        margin: 10px 0;
        padding-left: 25px;
        position: relative;
        width: 30%;
    }

    .menu li::before {
        background-color: rgb(226, 184, 76);
        position: absolute;
        content: '';
        width: 10px;
        height: 10px;
        left: 3px;
        top: 6px;
    }

    .menu li::after {
        border: #e3ba54 1px solid;
        background: #fff;
        position: absolute;
        content: '';
        width: 9px;
        height: 9px;
        left: 0;
        top: 5px;
    }

    .menu a {
        color: #000;
        font-weight: 500;
        cursor: pointer;
        position: relative;
        font-size: 16px;
    }

    .menu a:hover {
        color: #6d30ab;
    }
</style>
{% endblock %}